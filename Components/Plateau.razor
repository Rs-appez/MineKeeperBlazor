<div class="info">
    <label>Rows :</label>
    <input type="number" @bind="Rows" min="5" max="20" />
    <label>Mines :</label>
    <input type="number" @bind="NumberOfMines" min="1" max="50" />
</div>
<div class="plateau @(GameOver ? "gameOver" : "")">
    @if (GameOver)
    {
        <div class="overTitle">
            <h2 class="@(GameWin ? "win" : " lose")">Game Over!</h2>
            @if (GameWin)
            {
                <h3 class="win">You Win!</h3>
            }
            else
            {
                <h3 class="lose">You Lose!</h3>
            }
        </div>
    }
    @for (int x = 0; x < Rows; x++)
    {
        <div class="row">
            @for (int y = 0; y < Rows; y++)
            {
                <Cell CurrentCase="Cases[(x, y)]" OnCellClick="OnClick" />
            }
        </div>
    }
</div>

@if (GameOver)
{
    <button @onclick="InitGame">Restart Game</button>
}
